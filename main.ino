void setup()  
{                
  Serial.begin(9600);
  display.begin(SSD1306_SWITCHCAPVCC, 0x3C);  //declare display height and width (128x64)
 
  display.display(); //show splashscreen
  delay(2000);
  display.clearDisplay();   //clears the screen
}

void loop() {
  /*************************************************************
    check the serial port for data
    the app sends the data every second in the form of
    date | time | phone | text \n 
  *************************************************************/
  while(Serial.available() > 0){
    String myDate = Serial.readStringUntil('|'); //read the string until "|" divider and store data
    Serial.read();
    String myTime = Serial.readStringUntil('|'); //read the string until "|" divider and store data
    Serial.read();
    String myPhone = Serial.readStringUntil('|'); //read the string until "|" divider and store data
    Serial.read();
    String myText  = Serial.readStringUntil('\n'); //read the string until "\n" and store data

    //time handler
    if(myTime.indexOf('time') >= 0){ //read the string and display its value if valid
      display.setCursor(0,3);
      display.print("Comm Error");
   }
   else{
      display.setCursor(115,12);
      display.setTextSize(2);
      display.setTextColor(1);
      display.print(myTime);
      display.display();
    }

    //date handler
    if(myDate.indexOf('date') >= 0){ //read the string and display its value if valid
      display.setCursor(0,2);
      display.clearDisplay();
   }
   else{
      display.setCursor(56,0);
      display.setTextSize(1);
      display.setTextColor(1);
      display.print(myDate);
      display.display();
   }

    //call handler
    if(myPhone.indexOf('phone') >= 0){ //read the string and display its value
      display.setCursor(0,6);
      display.clearDisplay();
      display.setCursor(0,7);
      display.clearDisplay();
   }
   else{
      display.drawBitmap(0, 0, calls, 128, 64, 1); //display call icon as well as phone number
      display.display();
      display.setCursor(20,54);
      display.print(myPhone);
      display.display(); 

      display.setCursor(115,12);  //keep displaying time and date
      display.setTextSize(2);
      display.setTextColor(1);
      display.print(myTime);
      display.display();

      display.setCursor(56,0);
      display.setTextSize(1);
      display.setTextColor(1);
      display.print(myDate);
      display.display();
   }
   
   if(myText.indexOf('text') >= 0){ //read the string and display its value
      display.setCursor(0,6);
      display.clearDisplay();
      display.setCursor(0,7);
      display.clearDisplay();
   }
   else{
      display.drawBitmap(0, 0, text, 128, 64, 1); //display text icon as well as phone number
      display.display();
      display.setCursor(25,54);
      display.print(myText);
      display.display();

